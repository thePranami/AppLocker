<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/gestureOverlayView"
        android:layout_alignParentTop="true"
        android:padding="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/title_arrow"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/back"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/splash_logo_two"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_unlock_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/unlock_self_gesture"/>
    </RelativeLayout>

    <android.gesture.GestureOverlayView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gestureColor="@color/buttonSelector"
        android:id="@+id/gestureOverlayView">
        <TextView
            android:id="@+id/tv_gesture_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw_gesture"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceLarge"
            android:padding="5dp"/>
    </android.gesture.GestureOverlayView>

</RelativeLayout>